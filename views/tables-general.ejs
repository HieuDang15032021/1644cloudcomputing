    <section class="section">
      <div class="row">

        <div class="col-lg">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">My Toys</h5>

              <form method="POST" action="/add">
                <div class="row mb-3">
                  <label for="inputEmail3" class="col-sm-2 col-form-label">ID</label>
                  <div class="col-sm-10">
                    <input type="text" class="form-control" id="inputText" name="ID">
                  </div>
                </div>
                <div class="row mb-3">
                  <label for="inputEmail3" class="col-sm-2 col-form-label">Product Name</label>
                  <div class="col-sm-10">
                    <input type="text" class="form-control" id="inputEmail" name="Product">
                  </div>
                </div>
                <div class="row mb-3">
                  <label for="inputPassword3" class="col-sm-2 col-form-label">Price</label>
                  <div class="col-sm-10">
                    <input type="number" class="form-control" id="inputPassword" name="Price">
                  </div>
                </div>
                <div class="row mb-3">
                  <label for="inputPassword3" class="col-sm-2 col-form-label">Types</label>
                  <div class="col-sm-10">
                    <select name="Types" class="form-control" aria-label="Floating label select example">
                      <option value="">check</option>
                      <option value="Select">Select</option>
                      <option value="Deluxe">Deluxe</option>
                      <option value="Premium">Premium</option>
                      <option value="Ultra">Ultra</option>
                      <option value="Exclusive">Exclusive</option>
                    </select>
                  </div>
                </div>
            </div>
          </div>
          <div class="text-center">
            <button type="submit" class="btn btn-primary">Add Toy</button>
          </div>
          </form><!-- End Horizontal Form -->


          <table class="table table-sm">
            <thead>
              <tr>
                <th scope="col">ID</th>
                <th scope="col">Name</th>
                <th scope="col">Price</th>
                <th scope="col">Types</th>
                <th scope="col">Operation</th>
              </tr>
            </thead>
            <tbody>
            <tbody class="""quotes">

              <% for(var i=0; i < quotes.length; i++) {%>
                <tr class="quotes">
                  <td>
                    <%= quotes[i].ID %>
                  </td>
                  <td>
                    <%= quotes[i].Product %>
                  </td>
                  <td>
                    <%= quotes[i].Price %>
                  </td>
                  <td>
                    <%= quotes[i].Types %>
                  </td>
                  <td><a href="delete/<%= quotes[i]._id  %>" class="btn btn-sm btn-primary">Delete</a></td>
                </tr>

                <% } %>

            </tbody>
          </table>

          <!-- End small tables -->

        </div>
